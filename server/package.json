{
  "name": "wobble",
  "version": "1.0.0",
  "description": "A platform for web developers to showcase their projects",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "client": "BROWSER=none npm start --prefix client",
    "dev": "concurrently --openssl-legacy-provider \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix && npm run build --prefix client",
    "test": "mocha tests --recursive --exit",
    "ci": "rm -rf node_modules && npm i"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.22.0",
    "config": "^3.3.1",
    "express": "^4.17.3",
    "express-validator": "^6.6.0",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^9.2.2",
    "mongoose": "^5.9.27",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "rc-pagination": "^3.1.0",
    "redis": "^4.0.6",
    "supertest": "^6.2.2",
    "swagger-ui-express": "^4.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
